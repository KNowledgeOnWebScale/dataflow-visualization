{
  "type": "array",
  "title": "Array of edges",
  "$id": "edgeSchema",
  "items": {
    "type": "object",
    "title": "Edge",
    "required": [
      "source",
      "target"
    ],
    "properties": {
      "color": {
        "type": "string",
        "errorMessage": {
          "type": "color must be string"
        }
      },
      "thickness": {
        "type": "number",
        "errorMessage": {
          "type": "thickness must be number"
        }
      },
      "strokeDasharray": {
        "type": [
          "number",
          "string"
        ],
        "errorMessage": {
          "type": "strokeDasharray must be number or string"
        }
      },
      "animated": {
        "type": "boolean",
        "errorMessage": {
          "type": "animated must be boolean"
        }
      },
      "animation": {
        "type": "string",
        "errorMessage": {
          "type": "animation must be string"
        }
      },
      "type": {
        "type": "string",
        "enum": [
          "default",
          "step",
          "smoothstep",
          "straight"
        ],
        "errorMessage": {
          "type": "type must be string with possible values: default , step , smoothstep  or straight"
        }
      },
      "zIndex": {
        "type": "number",
        "errorMessage": {
          "type": "zIndex must be number"
        }
      },
      "label": {
        "type": "string",
        "errorMessage": {
          "type": "label must be string"
        }
      },
      "source": {
        "type": "string",
        "errorMessage": {
          "type": "source must be string"
        }
      },
      "target": {
        "type": "string",
        "errorMessage": {
          "type": "target must be string"
        }
      },
      "sourceHandle": {
        "type": "string",
        "enum": [
          "left-source",
          "right-source",
          "top-source",
          "bottom-source"
        ],
        "errorMessage": {
          "type": "sourceHandle must be string with possible values: left-source , right-source , top-source  or bottom-source"
        }
      },
      "targetHandle": {
        "type": "string",
        "enum": [
          "left-target",
          "right-target",
          "top-target",
          "bottom-target"
        ],
        "errorMessage": {
          "type": "targetHandle must be string with possible values: left-target , right-target , top-target  or bottom-target"
        }
      },
      "markerStart": {
        "type": "object",
        "title": "Arrowhead schema",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "arrow",
              "arrowclosed"
            ],
            "errorMessage": "Type of arrow must be string with possible values: arrow  or arrowclosed"
          },
          "orient": {
            "type": [
              "string",
              "number"
            ],
            "errorMessage": "Orient of arrow must be number or string"
          },
          "color": {
            "type": "string",
            "errorMessage": "Color of arrow must be string"
          }
        }
      },
      "markerEnd": {
        "type": "object",
        "title": "Arrowhead schema",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "arrow",
              "arrowclosed"
            ],
            "errorMessage": "Type of arrow must be string with possible values: arrow  or arrowclosed"
          },
          "orient": {
            "type": [
              "string",
              "number"
            ],
            "errorMessage": "Orient of arrow must be number or string"
          },
          "color": {
            "type": "string",
            "errorMessage": "Color of arrow must be string"
          }
        }
      }
    },
    "errorMessage": {
      "type": "Each edge should be an object",
      "properties": {}
    }
  },
  "errorMessage": {
    "type": "Edges are expected to be objects in an array"
  }
}